import re
from collections import Counter

def extract_email_domains(text):
    """
    Extract email domains from the given text and print them along with their counts.

    :param text: The input text to extract email domains from.
    :type text: str
    """
    if not text:
        raise ValueError("Input text cannot be empty.")

    # Find all email addresses in the text
    email_regex = r'\b[A-Za-z0-9._%+-]+@[A-Za-z0-9.-]+\.[A-Z|a-z]{2,}\b'
    emails = re.findall(email_regex, text)

    # Extract and count the domains of the email addresses
    domains = [email.split('@')[1] for email in emails]
    domain_count = Counter(domains)

    # Sort and print the domains and their counts
    for domain, count in domain_count.most_common():
        print("{}: {}".format(domain, count))

# Test the function
text = 'Please send your feedback to john.doe@example.com, jane_doe@example.co.uk, and jim@example.org'
extract_email_domains(text)
